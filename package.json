{
  "name": "pdsadmin-web",
  "version": "0.0.0",
  "type": "module",
  "private": true,
  "packageManager": "pnpm@10.30.1+sha512.3590e550d5384caa39bd5c7c739f72270234b2f6059e13018f975c313b1eb9fefcc09714048765d4d9efe961382c312e624572c0420762bdc5d5940cdf9be73a",
  "scripts": {
    "build": "tsc -b && vite build",
    "dev": "run-s -sl setup-dev-env reset-dev-env && run-p -srl run-dev-env dev:vite",
    "dev:vite": "wait-on http://localhost:2583 && vite --host",
    "e2e": "playwright test",
    "format": "eslint . --fix && prettier . --write",
    "lint": "eslint . && prettier . --check",
    "prepare": "husky",
    "preview": "pnpm reset-dev-env && run-p -srl run-dev-env preview:vite",
    "preview:vite": "wait-on http://localhost:2583 && sleep 5 && vite preview",
    "reset-dev-env": "./scripts/reset-dev-env.sh",
    "run-dev-env": "./scripts/run-dev-env.sh",
    "setup-dev-env": "./scripts/setup-dev-env.sh",
    "typecheck": "tsc -b"
  },
  "dependencies": {
    "@atcute/client": "4.2.1",
    "@conform-to/react": "1.17.1",
    "@conform-to/zod": "1.17.1",
    "@tailwindcss/vite": "4.1.18",
    "clsx": "2.1.1",
    "i18next": "25.8.13",
    "i18next-browser-languagedetector": "8.2.1",
    "jotai": "2.18.0",
    "react": "19.2.4",
    "react-dom": "19.2.4",
    "react-i18next": "16.5.4",
    "tailwind-merge": "3.5.0",
    "tailwindcss": "4.1.18",
    "zod": "4.3.6"
  },
  "devDependencies": {
    "@atcute/atproto": "3.1.10",
    "@egoist/tailwindcss-icons": "1.9.2",
    "@iconify-json/lucide": "1.2.93",
    "@iconify-json/simple-icons": "1.2.71",
    "@mkizka/eslint-config": "7.2.0",
    "@playwright/test": "1.58.2",
    "@types/node": "22.19.11",
    "@types/react": "19.2.14",
    "@types/react-dom": "19.2.3",
    "@vitejs/plugin-react-swc": "4.2.3",
    "daisyui": "5.5.19",
    "eslint": "9.39.3",
    "eslint-plugin-react-refresh": "0.5.2",
    "giget": "2.0.0",
    "husky": "9.1.7",
    "lint-staged": "16.2.7",
    "npm-run-all2": "8.0.4",
    "prettier": "3.8.1",
    "prettier-plugin-pkg": "0.21.2",
    "prettier-plugin-tailwindcss": "0.7.2",
    "typescript": "5.9.3",
    "vite": "7.3.1",
    "wait-on": "9.0.4"
  },
  "lint-staged": {
    "*.{js,mjs,ts,tsx}": "eslint --fix",
    "*": "prettier --ignore-unknown --write"
  },
  "prettier": {
    "plugins": [
      "prettier-plugin-pkg",
      "prettier-plugin-tailwindcss"
    ]
  }
}
