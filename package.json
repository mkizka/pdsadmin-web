{
  "name": "pdsadmin-web",
  "version": "0.0.0",
  "type": "module",
  "private": true,
  "packageManager": "pnpm@10.27.0+sha512.72d699da16b1179c14ba9e64dc71c9a40988cbdc65c264cb0e489db7de917f20dcf4d64d8723625f2969ba52d4b7e2a1170682d9ac2a5dcaeaab732b7e16f04a",
  "scripts": {
    "build": "tsc -b && vite build",
    "dev": "run-s -sl setup-dev-env reset-dev-env && run-p -srl run-dev-env dev:vite",
    "dev:vite": "wait-on http://localhost:2583 && vite --host",
    "e2e": "playwright test",
    "format": "eslint . --fix && prettier . --write",
    "lint": "eslint . && prettier . --check",
    "prepare": "husky",
    "preview": "pnpm reset-dev-env && run-p -srl run-dev-env preview:vite",
    "preview:vite": "wait-on http://localhost:2583 && sleep 5 && vite preview",
    "reset-dev-env": "./scripts/reset-dev-env.sh",
    "run-dev-env": "./scripts/run-dev-env.sh",
    "setup-dev-env": "./scripts/setup-dev-env.sh",
    "typecheck": "tsc -b"
  },
  "dependencies": {
    "@atcute/client": "4.2.1",
    "@conform-to/react": "1.15.1",
    "@conform-to/zod": "1.15.1",
    "@tailwindcss/vite": "4.1.14",
    "clsx": "2.1.1",
    "i18next": "25.7.3",
    "i18next-browser-languagedetector": "8.2.0",
    "jotai": "2.16.1",
    "react": "19.2.3",
    "react-dom": "19.2.3",
    "react-i18next": "16.5.1",
    "tailwind-merge": "3.4.0",
    "tailwindcss": "4.1.14",
    "zod": "4.3.5"
  },
  "devDependencies": {
    "@atcute/atproto": "3.1.10",
    "@egoist/tailwindcss-icons": "1.9.0",
    "@iconify-json/lucide": "1.2.82",
    "@iconify-json/simple-icons": "1.2.65",
    "@mkizka/eslint-config": "7.2.0",
    "@playwright/test": "1.56.1",
    "@types/node": "22.19.3",
    "@types/react": "19.2.7",
    "@types/react-dom": "19.2.3",
    "@vitejs/plugin-react-swc": "4.2.2",
    "daisyui": "5.5.14",
    "eslint": "9.38.0",
    "eslint-plugin-react-refresh": "0.4.26",
    "giget": "2.0.0",
    "husky": "9.1.7",
    "lint-staged": "16.2.7",
    "npm-run-all2": "8.0.4",
    "prettier": "3.7.4",
    "prettier-plugin-pkg": "0.21.2",
    "prettier-plugin-tailwindcss": "0.7.2",
    "typescript": "5.9.3",
    "vite": "7.3.0",
    "wait-on": "9.0.3"
  },
  "lint-staged": {
    "*.{js,mjs,ts,tsx}": "eslint --fix",
    "*": "prettier --ignore-unknown --write"
  },
  "prettier": {
    "plugins": [
      "prettier-plugin-pkg",
      "prettier-plugin-tailwindcss"
    ]
  }
}
