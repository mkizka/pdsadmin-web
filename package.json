{
  "name": "pdsadmin-web",
  "version": "0.0.0",
  "type": "module",
  "private": true,
  "packageManager": "pnpm@10.10.0+sha512.d615db246fe70f25dcfea6d8d73dee782ce23e2245e3c4f6f888249fb568149318637dca73c2c5c8ef2a4ca0d5657fb9567188bfab47f566d1ee6ce987815c39",
  "scripts": {
    "build": "tsc -b && vite build",
    "dev": "run-s -sl setup-dev-env reset-dev-env && run-p -srl run-dev-env dev:vite",
    "dev:vite": "wait-on http://localhost:2583 && vite --host",
    "e2e": "playwright test",
    "format": "eslint . --fix && prettier . --write",
    "lint": "eslint . && prettier . --check",
    "prepare": "husky",
    "preview": "pnpm reset-dev-env && run-p -srl run-dev-env preview:vite",
    "preview:vite": "wait-on http://localhost:2583 && sleep 5 && vite preview",
    "reset-dev-env": "./scripts/reset-dev-env.sh",
    "run-dev-env": "./scripts/run-dev-env.sh",
    "setup-dev-env": "./scripts/setup-dev-env.sh",
    "typecheck": "tsc -b"
  },
  "dependencies": {
    "@atcute/client": "^4.0.0",
    "@conform-to/react": "^2.5.1",
    "@conform-to/zod": "^2.5.1",
    "@tailwindcss/vite": "^4.1.6",
    "clsx": "^2.1.1",
    "i18next": "^25.2.1",
    "i18next-browser-languagedetector": "^8.1.0",
    "jotai": "^2.12.4",
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "react-i18next": "^15.5.2",
    "tailwind-merge": "^3.3.0",
    "tailwindcss": "^4.1.6",
    "zod": "^3.24.1"
  },
  "devDependencies": {
    "@atcute/atproto": "^3.0.0",
    "@egoist/tailwindcss-icons": "^1.9.0",
    "@iconify-json/lucide": "^1.2.44",
    "@mkizka/eslint-config": "^6.0.1",
    "@playwright/test": "^1.52.0",
    "@types/node": "^22.15.21",
    "@types/react": "^19.1.2",
    "@types/react-dom": "^19.1.2",
    "@vitejs/plugin-react-swc": "^3.9.0",
    "daisyui": "^5.0.35",
    "eslint": "^9.25.0",
    "eslint-plugin-react-refresh": "^0.4.19",
    "giget": "^2.0.0",
    "husky": "^9.1.7",
    "lint-staged": "^16.0.0",
    "npm-run-all2": "^8.0.2",
    "prettier": "^3.5.3",
    "prettier-plugin-pkg": "^0.19.1",
    "prettier-plugin-tailwindcss": "^0.6.11",
    "typescript": "~5.8.3",
    "vite": "^6.3.5",
    "wait-on": "^8.0.3"
  },
  "lint-staged": {
    "*.{js,mjs,ts,tsx}": "eslint --fix",
    "*": "prettier --ignore-unknown --write"
  },
  "prettier": {
    "plugins": [
      "prettier-plugin-pkg",
      "prettier-plugin-tailwindcss"
    ]
  }
}
