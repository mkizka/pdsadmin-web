{
  "name": "pdsadmin-web",
  "version": "0.0.0",
  "type": "module",
  "private": true,
  "packageManager": "pnpm@10.28.1+sha512.7d7dbbca9e99447b7c3bf7a73286afaaf6be99251eb9498baefa7d406892f67b879adb3a1d7e687fc4ccc1a388c7175fbaae567a26ab44d1067b54fcb0d6a316",
  "scripts": {
    "build": "tsc -b && vite build",
    "dev": "run-s -sl setup-dev-env reset-dev-env && run-p -srl run-dev-env dev:vite",
    "dev:vite": "wait-on http://localhost:2583 && vite --host",
    "e2e": "playwright test",
    "format": "eslint . --fix && prettier . --write",
    "lint": "eslint . && prettier . --check",
    "prepare": "husky",
    "preview": "pnpm reset-dev-env && run-p -srl run-dev-env preview:vite",
    "preview:vite": "wait-on http://localhost:2583 && sleep 5 && vite preview",
    "reset-dev-env": "./scripts/reset-dev-env.sh",
    "run-dev-env": "./scripts/run-dev-env.sh",
    "setup-dev-env": "./scripts/setup-dev-env.sh",
    "typecheck": "tsc -b"
  },
  "dependencies": {
    "@atcute/client": "4.2.1",
    "@conform-to/react": "1.15.1",
    "@conform-to/zod": "1.15.1",
    "@tailwindcss/vite": "4.1.18",
    "clsx": "2.1.1",
    "i18next": "25.7.4",
    "i18next-browser-languagedetector": "8.2.0",
    "jotai": "2.16.2",
    "react": "19.2.4",
    "react-dom": "19.2.4",
    "react-i18next": "16.5.3",
    "tailwind-merge": "3.4.0",
    "tailwindcss": "4.1.18",
    "zod": "4.3.5"
  },
  "devDependencies": {
    "@atcute/atproto": "3.1.10",
    "@egoist/tailwindcss-icons": "1.9.0",
    "@iconify-json/lucide": "1.2.86",
    "@iconify-json/simple-icons": "1.2.67",
    "@mkizka/eslint-config": "7.2.0",
    "@playwright/test": "1.57.0",
    "@types/node": "22.19.7",
    "@types/react": "19.2.9",
    "@types/react-dom": "19.2.3",
    "@vitejs/plugin-react-swc": "4.2.2",
    "daisyui": "5.5.14",
    "eslint": "9.38.0",
    "eslint-plugin-react-refresh": "0.4.26",
    "giget": "2.0.0",
    "husky": "9.1.7",
    "lint-staged": "16.2.7",
    "npm-run-all2": "8.0.4",
    "prettier": "3.8.0",
    "prettier-plugin-pkg": "0.21.2",
    "prettier-plugin-tailwindcss": "0.7.2",
    "typescript": "5.9.3",
    "vite": "7.3.1",
    "wait-on": "9.0.3"
  },
  "lint-staged": {
    "*.{js,mjs,ts,tsx}": "eslint --fix",
    "*": "prettier --ignore-unknown --write"
  },
  "prettier": {
    "plugins": [
      "prettier-plugin-pkg",
      "prettier-plugin-tailwindcss"
    ]
  }
}
