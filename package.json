{
  "name": "pdsadmin-web",
  "version": "0.0.0",
  "type": "module",
  "private": true,
  "packageManager": "pnpm@10.18.2+sha512.9fb969fa749b3ade6035e0f109f0b8a60b5d08a1a87fdf72e337da90dcc93336e2280ca4e44f2358a649b83c17959e9993e777c2080879f3801e6f0d999ad3dd",
  "scripts": {
    "build": "tsc -b && vite build",
    "dev": "run-s -sl setup-dev-env reset-dev-env && run-p -srl run-dev-env dev:vite",
    "dev:vite": "wait-on http://localhost:2583 && vite --host",
    "e2e": "playwright test",
    "format": "eslint . --fix && prettier . --write",
    "lint": "eslint . && prettier . --check",
    "prepare": "husky",
    "preview": "pnpm reset-dev-env && run-p -srl run-dev-env preview:vite",
    "preview:vite": "wait-on http://localhost:2583 && sleep 5 && vite preview",
    "reset-dev-env": "./scripts/reset-dev-env.sh",
    "run-dev-env": "./scripts/run-dev-env.sh",
    "setup-dev-env": "./scripts/setup-dev-env.sh",
    "typecheck": "tsc -b"
  },
  "dependencies": {
    "@atcute/client": "4.0.4",
    "@conform-to/react": "1.12.0",
    "@conform-to/zod": "1.12.0",
    "@tailwindcss/vite": "4.1.14",
    "clsx": "2.1.1",
    "i18next": "25.6.0",
    "i18next-browser-languagedetector": "8.2.0",
    "jotai": "2.15.0",
    "react": "19.1.1",
    "react-dom": "19.1.1",
    "react-i18next": "16.0.0",
    "tailwind-merge": "3.3.1",
    "tailwindcss": "4.1.14",
    "zod": "4.1.12"
  },
  "devDependencies": {
    "@atcute/atproto": "3.1.7",
    "@egoist/tailwindcss-icons": "1.9.0",
    "@iconify-json/lucide": "1.2.69",
    "@iconify-json/simple-icons": "1.2.54",
    "@mkizka/eslint-config": "7.1.2",
    "@playwright/test": "1.55.1",
    "@types/node": "22.18.10",
    "@types/react": "19.1.5",
    "@types/react-dom": "19.1.5",
    "@vitejs/plugin-react-swc": "4.1.0",
    "daisyui": "5.2.3",
    "eslint": "9.36.0",
    "eslint-plugin-react-refresh": "0.4.23",
    "giget": "2.0.0",
    "husky": "9.1.7",
    "lint-staged": "16.2.4",
    "npm-run-all2": "8.0.4",
    "prettier": "3.6.2",
    "prettier-plugin-pkg": "0.21.2",
    "prettier-plugin-tailwindcss": "0.6.14",
    "typescript": "5.9.3",
    "vite": "7.1.9",
    "wait-on": "9.0.1"
  },
  "lint-staged": {
    "*.{js,mjs,ts,tsx}": "eslint --fix",
    "*": "prettier --ignore-unknown --write"
  },
  "prettier": {
    "plugins": [
      "prettier-plugin-pkg",
      "prettier-plugin-tailwindcss"
    ]
  }
}
